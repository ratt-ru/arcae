{
  "name": "casacore",
  "version": "3.5.0",
  "description": "The casacore libraries",
  "homepage": "https://casacore.github.io/",
  "supports": "!windows",
  "dependencies": [
    "boost-filesystem",
    "cfitsio",
    "gsl",
    "lapack",
    {
      "name": "openblas",
      "default-features": false
    },
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    },
    "wcslib",
    "zlib"
  ],
  "default-features": [
    "dysco",
    "readline",
    "stacktrace",
    "mutex",
    "tablelocking"
  ],
  "features": {
    "adios2": {
      "description": "Enable ADIOS2 support",
      "dependencies": [
        "adios2",
        "mpi"
      ]
    },
    "deprecated": {
      "description": "Enable deprecated feature support"
    },
    "dysco": {
      "description": "Enable DYSCO Storage Manager support"
    },
    "fftw3": {
      "description": "Enable FFTW3 support",
      "dependencies": [
        {
          "name": "fftw3",
          "features": [
            "threads"
          ]
        }
      ]
    },
    "hdf5": {
      "description": "Enable HDF5 support",
      "dependencies": [
        "hdf5"
      ]
    },
    "mpi": {
      "description": "Enable MPI support",
      "dependencies": [
        "mpi"
      ]
    },
    "openmp": {
      "description": "Enable OpenMP support"
    },
    "python3": {
      "description": "Enable Python3 support",
      "dependencies": [
        "boost-python3",
        "python3"
      ]
    },
    "readline": {
      "description": "Enable readline support",
      "dependencies": [
        "readline-unix"
      ]
    },
    "stacktrace": {
      "description": "Enable stacktrace support"
    },
    "tablelocking": {
      "description": "Enable table locking"
    },
    "mutex": {
      "description": "Enable mutexes in critical locations"
    }
  }
}
